<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fitness_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg5" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/slide_image_fitness"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/jenifer_lopez" />

        <TextView
            android:id="@+id/slide_name_fitness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5sp"
            android:fontFamily="sans-serif"
            android:text="JENNIFER LOPEZ"
            android:textColor="#fff"
            android:textSize="25sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/motivation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif"
        android:text="MOTIVATION FOR FITNESS"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="22sp"
        android:textStyle="bold" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/motivation"
        android:background="#80000000"
        android:layout_marginTop="60sp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <me.biubiubiu.justifytext.library.JustifyTextView
            android:id="@+id/quote_fitness"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="@string/quote"
            android:textColor="#fff"
            android:fontFamily="serif-monospace"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />

    </LinearLayout>






</RelativeLayout>